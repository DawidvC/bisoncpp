string remove1;
string remove2;
string remove3;

void setRemovals()
{
    // always:
        remove1 = 
            "build-stamp configure-stamp options/SKEL "
            "tmp/bisonc++.o o */o release.yo tmp/libbisonc++.a "    
            ;

    // dist:
        remove2 =
            "tmp";

    // in ./documentation:
        remove3 = "man/*.1 man/*.3bisonc++ man/*.html manual/manual-stamp "
                  "manual/*.html manual/invoking/usage bisonc++ usage/usage";
}

void clean(int dist)
{
    setRemovals();

    run("rm -rf " + remove1);

    if (dist)
        run("rm -rf " + remove2);

    chdir("documentation");
    run("rm -rf " + remove3);

    exit(0);
}




