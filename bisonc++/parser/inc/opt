optComma:
    ','
|
    // empty
;

optNumber:
    NUMBER
    {
        $$ = new SemBool(true);
    }
|
    {
        $$ = new SemBool(false);
    }
;

optSemiCol:
    ';'
|
    // empty
;

_tokenname:
    {
        d_expect = "token name";
    }
;

optTypename:
    typename
    _tokenname
|
    _tokenname
    {
        d_field.clear();
    }
;

optTwo_percents:
    TWO_PERCENTS
    {
        wmsg << 
            "Ignoring all input beyond the second %% token" << endl;
        ACCEPT();
    }
|
    // empty
;
