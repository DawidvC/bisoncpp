#include "generator.ih"

void Generator::srTableDeclarations(ostream &out) const
{
    unsigned const n = 8;

    key(out);

    unsigned idx = 0;
    while (idx < d_itemSets.nStates())
    {
        if (idx % n == 0)
            out <<  "           ";
        out << " s_" << idx << "[],";
        if (++idx % n == 0)
            out << "\n";
    }
    if (idx % n != 0)
        out << "\n";
}
