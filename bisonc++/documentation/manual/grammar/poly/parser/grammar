%filenames parser
%scanner ../scanner/scanner.h

%polymorphic INT: int; TEXT: std::string;

%token INT IDENTIFIER 

%type <TEXT>    identifier
%type <INT>     int
%type <STYPE__> either

%%

start:
    prompt
    rules
;

prompt:
    {
        cout << "? ";
    }
;

identifier:
    IDENTIFIER
    {
        $$ = d_scanner.matched();
    }
;

int:
    INT
    {
        $$ = intValue();
    }
;

either:
    int
|
    identifier
;

rule:
    identifier '(' identifier ')' '\n'
    {
          cout << $1 << " " << $3 << '\n';
    }
|
    identifier '=' int '\n'
    {
          cout << $1 << " " << $3 << '\n';
    }
|
    either '\n'
    {
        process($1);
    }
;

rulePrompt:
    rule
    prompt
;

rules:
    rules rulePrompt
|
    rulePrompt
;





