if (d_debug__)
{
    s_out__ <<  "encountered " << symbol__(d_token__) << " in state " <<
                d_state__ << ": ";

    if (action < 0)             // a reduction was found
        s_out__ << ": reducing by rule " << -action;
    else if (action == 0)
        s_out__ <<  "ACCEPT";
    else
        s_out__ <<  "next state: " << action;

    s_out__ << "\n" << dflush__;
}
