#!/bin/bash

for x in base/comment \
         base/declarations \
         base/base1 \
    base/clearin \
    base/debugfunctions \
    base/pop \
    base/poptoken \
    base/push \
    base/pushtoken \
    base/reduce \
    base/top
do
    echo "// $x" >> bisonc++.cc
    cat $x >> bisonc++.cc
done

for x in \
    derived/errorrecovery \
    derived/executeaction \
    derived/lookup \
    derived/nexttoken \
    derived/print \
    derived/parse \
    derived/tail
do
    echo "// $x" >> bisonc++.cc
    cat $x >> bisonc++.cc
done

for x in hdr/includes \
         hdr/baseclass \
    hdr/abort \
    hdr/actioncases \
    hdr/accept \
    hdr/debug \
    hdr/error \
    hdr/opbitand \
    hdr/opbitor \
    hdr/tail
do
    echo "// $x" >> bisonc++base.h
    cat $x >> bisonc++base.h
done

mv bisonc++* ../skeletons/




