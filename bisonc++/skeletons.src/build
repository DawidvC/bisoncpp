#!/bin/bash

for x in base/comment \
         base/declarations \
         base/base1 \
    base/checkstacksize \
    base/consumed \
    base/done \
    base/error \
    base/findtoken \
    base/newtoken \
    base/pop \
    base/push \
    base/reduce \
    base/reset \
    base/setdebug \
    base/trydefaultreduce
do
    echo "// $x" >> bisonc++.cc
    cat $x >> bisonc++.cc
done


for x in derived/errorrecovery \
    derived/executeaction \
    derived/gettoken \
    derived/nextcycle \
    derived/parse
do
    echo "// $x" >> bisonc++.cc
    cat $x >> bisonc++.cc
done


for x in hdr/includes \
         hdr/baseclass \
    hdr/abort \
    hdr/accept \
    hdr/debug \
    hdr/error \
    hdr/top \
    hdr/msgidx \
    hdr/opbitand \
    hdr/opbitor \
    hdr/stacksize \
    hdr/token \
    hdr/vs \
    hdr/tail
do
    echo "// $x" >> bisonc++base.h
    cat $x >> bisonc++base.h
done

mv bisonc++* ../skeletons/




